<?php
// Simulate a database or persistent storage using a JSON file
define('DOCUMENTS_DB', 'tmf_documents.json');
define('UPLOAD_DIR', 'tmf_uploads/');

// Ensure upload directory exists
if (!is_dir(UPLOAD_DIR)) {
    mkdir(UPLOAD_DIR, 0777, true);
}

// Function to load existing documents
function loadDocuments() {
    if (file_exists(DOCUMENTS_DB)) {
        return json_decode(file_get_contents(DOCUMENTS_DB), true);
    }
    return [];
}

// Function to save documents
function saveDocuments(array $documents) {
    file_put_contents(DOCUMENTS_DB, json_encode($documents, JSON_PRETTY_PRINT));
}

$message = '';
$messageType = '';

if (isset($_POST['submit'])) {
    $documentTitle = htmlspecialchars($_POST['documentTitle']);
    $tmfZone = htmlspecialchars($_POST['tmfZone']);
    $tmfArtifact = htmlspecialchars($_POST['tmfArtifact']);
    $trialId = htmlspecialchars($_POST['trialId']);
    $siteId = htmlspecialchars($_POST['siteId']);

    // Handle file upload
    if (isset($_FILES['documentFile']) && $_FILES['documentFile']['error'] == UPLOAD_ERR_OK) {
        $fileTmpPath = $_FILES['documentFile']['tmp_name'];
        $fileName = basename($_FILES['documentFile']['name']);
        $fileSize = $_FILES['documentFile']['size'];
        $fileType = $_FILES['documentFile']['type'];
        $fileExtension = pathinfo($fileName, PATHINFO_EXTENSION);

        // Generate a unique file name to prevent overwrites
        $newFileName = uniqid() . '.' . $fileExtension;
        $destPath = UPLOAD_DIR . $newFileName;

        if (move_uploaded_file($fileTmpPath, $destPath)) {
            $documents = loadDocuments();
            $documentId = uniqid('TMF_DOC_');
            $currentVersion = '1.0'; // Simulate initial version

            $documents[] = [
                'id' => $documentId,
                'title' => $documentTitle,
                'tmfZone' => $tmfZone,
                'tmfArtifact' => $tmfArtifact,
                'trialId' => $trialId,
                'siteId' => $siteId,
                'fileName' => $fileName,
                'filePath' => $destPath,
                'version' => $currentVersion,
                'uploadedBy' => 'CurrentUser', // In a real system, get authenticated user
                'uploadDate' => date('Y-m-d H:i:s'),
                'status' => 'Draft' // Initial status
            ];
            saveDocuments($documents);
            $message = "Document '$documentTitle' uploaded successfully and metadata saved.";
            $messageType = 'success';
        } else {
            $message = "There was an error moving the uploaded file.";
            $messageType = 'error';
        }
    } else {
        $message = "No file uploaded or an upload error occurred: " . $_FILES['documentFile']['error'];
        $messageType = 'error';
    }
}

// Display existing documents
$documents = loadDocuments();
$documentListHtml = '';
if (!empty($documents)) {
    foreach ($documents as $doc) {
        $documentListHtml .= '<div class="document-item">';
        $documentListHtml .= '<strong>' . htmlspecialchars($doc['title']) . '</strong> (ID: ' . htmlspecialchars($doc['id']) . ')<br>';
        $documentListHtml .= '<p>Trial: ' . htmlspecialchars($doc['trialId']);
        if (!empty($doc['siteId'])) {
            $documentListHtml .= ', Site: ' . htmlspecialchars($doc['siteId']);
        }
        $documentListHtml .= '</p>';
        $documentListHtml .= '<p>TMF Zone: ' . htmlspecialchars($doc['tmfZone']) . ', Artifact: ' . htmlspecialchars($doc['tmfArtifact']) . '</p>';
        $documentListHtml .= '<p>Version: ' . htmlspecialchars($doc['version']) . ', Status: ' . htmlspecialchars($doc['status']) . '</p>';
        $documentListHtml .= '<p>Uploaded By: ' . htmlspecialchars($doc['uploadedBy']) . ' on ' . htmlspecialchars($doc['uploadDate']) . '</p>';
        $documentListHtml .= '<p><a href="' . htmlspecialchars($doc['filePath']) . '" target="_blank">View File</a></p>';
        $documentListHtml .= '</div>';
    }
} else {
    $documentListHtml = '<p>No documents uploaded yet.</p>';
}

// Re-embed into HTML for display
// (In a real system, you'd redirect after POST and display messages via session)
?>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload TMF Document</title>
    <link rel="stylesheet" href="upload_document.html" type="text/css">
    <style> /* Include the styles directly for simplicity */
        body { font-family: Arial, sans-serif; background-color: #f4f7f6; margin: 20px; }
        .container { background-color: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); max-width: 600px; margin: auto; }
        h2 { text-align: center; color: #0056b3; margin-bottom: 25px; }
        .form-group { margin-bottom: 18px; }
        label { display: block; margin-bottom: 8px; font-weight: bold; color: #333; }
        input[type="text"], input[type="file"], select, textarea {
            width: calc(100% - 22px);
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 16px;
        }
        textarea { resize: vertical; min-height: 80px; }
        button {
            background-color: #28a745;
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 18px;
            display: block;
            width: 100%;
            transition: background-color 0.3s ease;
        }
        button:hover { background-color: #218838; }
        .message { margin-top: 20px; padding: 10px; border-radius: 5px; }
        .success { background-color: #d4edda; color: #155724; border-color: #c3e6cb; }
        .error { background-color: #f8d7da; color: #721c24; border-color: #f5c6cb; }
        .document-list { margin-top: 40px; border-top: 1px solid #eee; padding-top: 20px; }
        .document-item { border: 1px solid #e0e0e0; padding: 15px; margin-bottom: 10px; border-radius: 6px; background-color: #fbfbfb; }
        .document-item strong { color: #0056b3; }
        .document-item p { margin: 5px 0; font-size: 0.95em; }
    </style>
</head>
<body>
    <div class="container">
        <h2>Upload New TMF Document</h2>
        <?php if (!empty($message)): ?>
            <div class="message <?php echo $messageType; ?>"><?php echo $message; ?></div>
        <?php endif; ?>
        <form action="upload_tmf.php" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="documentFile">Select Document:</label>
                <input type="file" id="documentFile" name="documentFile" required>
            </div>
            <div class="form-group">
                <label for="documentTitle">Document Title:</label>
                <input type="text" id="documentTitle" name="documentTitle" required>
            </div>
            <div class="form-group">
                <label for="tmfZone">TMF Zone:</label>
                <select id="tmfZone" name="tmfZone" required>
                    <option value="">-- Select Zone --</option>
                    <option value="1">1. Management</option>
                    <option value="2">2. Central</option>
                    <option value="3">3. Regulatory</option>
                    <option value="4">4. IRB/IEC</option>
                    </select>
            </div>
            <div class="form-group">
                <label for="tmfArtifact">TMF Artifact Type:</label>
                <input type="text" id="tmfArtifact" name="tmfArtifact" placeholder="e.g., Protocol, ICF, CV" required>
            </div>
            <div class="form-group">
                <label for="trialId">Trial ID:</label>
                <input type="text" id="trialId" name="trialId" required>
            </div>
            <div class="form-group">
                <label for="siteId">Site ID (if applicable):</label>
                <input type="text" id="siteId" name="siteId">
            </div>
            <button type="submit" name="submit">Upload Document</button>
        </form>

        <div class="document-list">
            <h3>Uploaded Documents (Simulated)</h3>
            <div id="documentResults">
                <?php echo $documentListHtml; ?>
            </div>
        </div>
    </div>
</body>
</html>
